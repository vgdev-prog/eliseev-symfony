<div class="needs-validation" novalidate>
    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter post title'}}) }}
        <div class="form-text">Post title (max 255 characters)</div>
        {{ form_errors(form.title) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.text, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.text, {'attr': {'class': 'form-control', 'rows': 8, 'placeholder': 'Enter post content'}}) }}
        <div class="form-text">Post content (optional)</div>
        {{ form_errors(form.text) }}
    </div>

    <div class="d-grid gap-2">
        <button class="btn btn-primary btn-lg">
            <i class="bi bi-save"></i> {{ button_label|default('Save') }}
        </button>
    </div>
    {{ form_end(form) }}
</div>

