{% extends 'base.html.twig' %}

  {% block title %}{{ post.title }}{% endblock %}

  {% block body %}
      <div class="container mt-5">
          {# Breadcrumbs #}
          <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                      <a href="{{ path('app_post_index') }}">Posts</a>
                  </li>
                  <li class="breadcrumb-item active">{{ post.title }}</li>
              </ol>
          </nav>

          {# Карточка с данными поста #}
          <div class="card shadow">
              <div class="card-header bg-primary text-white">
                  <h2 class="mb-0">
                      <i class="bi bi-file-text"></i> {{ post.title }}
                  </h2>
              </div>
              <div class="card-body">
                  <dl class="row">
                      <dt class="col-sm-3">ID:</dt>
                      <dd class="col-sm-9">
                          <span class="badge bg-secondary">{{ post.id }}</span>
                      </dd>

                      <dt class="col-sm-3">Title:</dt>
                      <dd class="col-sm-9">{{ post.title }}</dd>

                      <dt class="col-sm-3">Text:</dt>
                      <dd class="col-sm-9">
                          {% if post.text %}
                              <p class="text-muted">{{ post.text }}</p>
                          {% else %}
                              <span class="text-muted fst-italic">No text content</span>
                          {% endif %}
                      </dd>
                  </dl>
              </div>
              <div class="card-footer bg-light">
                  <div class="d-flex justify-content-between">
                      <a href="{{ path('app_post_index') }}" class="btn btn-secondary">
                          <i class="bi bi-arrow-left"></i> Back to List
                      </a>
                      <div>
                          <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning">
                              <i class="bi bi-pencil"></i> Edit
                          </a>
                          {{ include('post/_delete_form.html.twig') }}
                      </div>
                  </div>
              </div>
          </div>
      </div>
  {% endblock %}
